/* pages/movie/movie.wxss */
.original_title {
  font-size: 40rpx;
  color: #999;
  padding: 15rpx;
  text-align: center;
}
.poster {
  display: flex;
  justify-content: space-around;
  margin: 10rpx 0;
  border-bottom: 2rpx solid #999;
  border-top: 2rpx solid #999;
}
.poster image {
  width: 450rpx;
  height: 650rpx;
}
.row-info, .row-info view {
  display: inline-block;
  font-size: 30rpx;
}
.summary {
  display: block;
  font-size: 30rpx;
}
.person-name {
  color: #3377aa;
}
.movie-photos {
  display: flex;
  /* flex-direction: row; */
  justify-content: space-around;
}
